<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity">
    //Tela de Login com os campos para digitar email e senha
    //Opcao de cadastro para nao cadastrados

    //Texto de Email para inserir o endereço de email

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="155dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/parkingcg" />


    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="none|textEmailAddress"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textCursorDrawable="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="34dp" />
    //Texto de senha para inserir a senha

    <EditText
        android:id="@+id/editSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textCursorDrawable="@android:color/background_light"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="91dp" />
    //Botao de login

    <Button
        android:id="@+id/btnLogar"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:background="#2ad8cf"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="137dp" />
    //Abrir Cadastro

    <TextView
        android:id="@+id/tvAbreCadastro"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Não tem cadastro? Clique aqui"
        android:textColor="@android:color/background_dark"
        android:textSize="15dp"
        android:textStyle="italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="200dp" />


</LinearLayout>